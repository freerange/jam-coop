<%= render 'shared/box', title: 'Log in' do %>
  <%= form_with(url: log_in_path) do |form| %>
    <div class="stack">
      <div class="stack jam-form-group">
        <%= form.label :email, "Email" %>
        <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="stack jam-form-group">
        <%= form.label :password, "Password" %>
        <%= form.password_field :password, required: true, autocomplete: "current-password" %>
      </div>

      <%= form.submit "Log in" %>
    </div>
  <% end %>

  <div class="stack jam-form-group">
    <%= text_link_to "Sign up", sign_up_path, class: 'link' %>
    <%= text_link_to "Forgot your password?", new_identity_password_reset_path, class: 'link' %>
  </div>
<% end %>
