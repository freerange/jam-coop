<%= render('shared/alert_box', message: alert) if alert %>

<%= form_for([@album.artist, @album , @purchase], builder: TailwindFormBuilder) do |form| %>
<div class="flex justify-center">
  <div class="w-1/2 border">
    <%= image_tag @album.cover.representation(resize_to_limit: [750, 750]), class: 'w-full border border-slate-200' %>
  </div>

  <div class="w-1/2 ml-3">
    <p>You are purchasing <strong><%= @album.title %></strong> by
    <%= @album.artist.name %> in MP3 V0 and FLAC (lossless)
    formats.</p>
  </div>
</div>

<div class="mt-3">
  <%= form.submit 'Checkout', data: { turbo: false }, class: 'w-full' %>
</div>
<% end %>
