<div data-controller="player">
  <div class="flex flex-row gap-4">
    <div class="w-1/2">
      <%= image_tag @album.cover.representation(resize_to_limit: [750, 750]), class: 'w-full border border-slate-200' %>
    </div>
    <div class="w-1/2">
      <div class="mb-3">
        <h1 class="text-lg font-medium leading-tight"><%= @album.title %></h1>
        <h2 class="text-sm text-slate-600"><%= @album.artist.name %></h2>
        <h3 data-player-target="trackTitle" class="invisible text-sm italic text-slate-500">one</h3>
      </div>

      <% if @album.preview %>
      <audio controls class='w-full hidden' data-player-target="audio" data-action="ended->player#ended timeupdate->player#progress" src="<%= url_for(@album.preview.file) %>">
      </audio>
      <% end %>

      <div class="my-3">
        <div class="flex gap-1 my-1">
          <button data-action="player#playPrev" class="flex justify-center items-center w-1/5 py-3 bg-slate-500 hover:bg-amber-400 text-white font-medium cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 16.811c0 .864-.933 1.405-1.683.977l-7.108-4.062a1.125 1.125 0 010-1.953l7.108-4.062A1.125 1.125 0 0121 8.688v8.123zM11.25 16.811c0 .864-.933 1.405-1.683.977l-7.108-4.062a1.125 1.125 0 010-1.953L9.567 7.71a1.125 1.125 0 011.683.977v8.123z" />
            </svg>
          </button>
          <button data-action="player#play" data-player-target="playButton" class="flex justify-center items-center w-3/5 py-3 bg-slate-600 hover:bg-amber-500 text-white font-medium cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z" />
            </svg>
          </button>
          <button data-action="player#pause" data-player-target="pauseButton" class="hidden flex justify-center items-center py-3 w-3/5 bg-slate-600 hover:bg-amber-500 text-white font-medium cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25v13.5m-7.5-13.5v13.5" />
            </svg>
          </button>
          <button data-action="player#playNext" class="flex justify-center items-center w-1/5 py-3 bg-slate-500 hover:bg-amber-400 text-white font-medium cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8.688c0-.864.933-1.405 1.683-.977l7.108 4.062a1.125 1.125 0 010 1.953l-7.108 4.062A1.125 1.125 0 013 16.81V8.688zM12.75 8.688c0-.864.933-1.405 1.683-.977l7.108 4.062a1.125 1.125 0 010 1.953l-7.108 4.062a1.125 1.125 0 01-1.683-.977V8.688z" />
            </svg>
          </button>
        </div>
        <div data-action="click->player#setProgress" data-player-target="progressContainer" class="w-full h-4 bg-slate-200 cursor-pointer">
          <div data-player-target="progress" class="w-0 h-4 bg-slate-500"></div>
        </div>
      </div>

      <div>
        <%= button_to "Buy", new_artist_album_purchase_path(@album.artist, @album), method: :get, class: "w-full py-3 bg-amber-500 hover:bg-amber-400 text-white font-medium cursor-pointer" %>
        <p class="text-xs text-slate-600"><%= number_to_currency(@album.price, unit: 'Â£') %> or more. Digital download. MP3 and FLAC</p>
      </div>
    </div>
  </div>

  <section class="my-6">
    <% @album.tracks.each_with_index do |track, index| %>
    <div class="flex flex-row justify-between mb-2">
      <% if track.preview %>
      <div data-player-target="track" data-action="click->player#playTrack" data-track-url="<%= url_for(track.preview.file) %>">
        <%= index + 1 %>. <span class="hover:underline cursor-pointer"><%= track.title %></span> <span class="text-slate-400"> <%= seconds_to_formated_track_time(track.preview_duration) %></span>
      </div>
      <% else %>
      <div>
        <%= index + 1 %>. <%= track.title %>
      </div>
      <% end %>

      <% if Current.user %>
      <div>
        <%= text_link_to 'Up', move_higher_artist_album_track_path(track.artist, track.album, track), data: {
            turbo_method: :post } %>
        <%= text_link_to 'Down', move_lower_artist_album_track_path(track.artist, track.album, track), data: {
            turbo_method: :post } %>
      </div>
      <% end %>
    </div>
    <% end %>
  </section>

  <% if @album.about %>
  <section class="mb-6">
    <%= format_metadata(@album.about) %>
  </section>
  <% end %>

  <% if @album.released_at %>
  <section class="mb-6">
    <p>released <%= @album.released_at.strftime('%B %-d, %Y') %></p>
  </section>
  <% end %>

  <% if @album.credits %>
  <section>
    <%= format_metadata(@album.credits) %>
  </section>
  <% end %>
</div>

<% content_for :admin do %>
<div>
  <h2 class="text-2xl mb-3">Published state</h2>
  <p>This album is currently <strong><%= @album.published? ? 'published' : 'unpublished' %></strong></p>
  <%= button_to [@album.published? ? :unpublish : :publish, @album.artist, @album], class: 'underline' do %>
    <%= @album.published? ? 'Unpublish' : 'Publish' %>
  <% end %>

  <h2 class="text-2xl my-3">Transcodes</h2>
  <ul>
    <% @album.tracks.each do |track| %>
    <li><strong><%= track.title %></strong> <%= track.transcodes.pluck(:format).join(" ") %></li>
    <% end %>
  </ul>

  <h2 class="text-2xl my-3">Downloads</h2>
  <ul>
    <% @album.downloads.each do |download| %>
    <li><%= text_link_to "Download (#{download.format})", rails_blob_path(download.file) %></li>
    <% end %>
  </ul>
</div>
<% end %>
