<div data-controller="player">
  <% if album.cover.attached? %>
    <%= image_tag cdn_url(album.cover.representation(resize_to_limit: [750, 750])), alt: 'Album Cover' %>
  <% end %>

  <h1><%= album.title %></h1>
  <h2><%= artist.name %></h2>
  <h3 data-player-target="trackTitle">
    <%= album.tracks.first.title %>
  </h3>

  <% if album.preview && album.preview.file %>
    <audio controls class="hidden" data-player-target="audio" data-action="ended->player#ended timeupdate->player#progress" src="<%= cdn_url(album.preview.file) %>">
    </audio>
  <% end %>

  <div class="bg-slate-200 cursor-pointer" data-action="click->player#setProgress" data-player-target="progressContainer">
    <div class="w-0 h-4 bg-slate-500" data-player-target="progress"></div>
  </div>

  <div class="flex">
    <button class="flex justify-center items-center w-1/5 py-3" data-action="player#playPrev">
      <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 16.811c0 .864-.933 1.405-1.683.977l-7.108-4.062a1.125 1.125 0 010-1.953l7.108-4.062A1.125 1.125 0 0121 8.688v8.123zM11.25 16.811c0 .864-.933 1.405-1.683.977l-7.108-4.062a1.125 1.125 0 010-1.953L9.567 7.71a1.125 1.125 0 011.683.977v8.123z"></path>
      </svg>
    </button>
    <button class="flex justify-center items-center w-3/5 py-3" data-action="player#play" data-player-target="playButton">
      <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z"></path>
      </svg>
    </button>
    <button class="flex justify-center items-center w-3/5 py-3 hidden" data-action="player#pause" data-player-target="pauseButton">
      <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25v13.5m-7.5-13.5v13.5"></path>
      </svg>
    </button>
    <button class="flex justify-center items-center w-1/5 py-3" data-action="player#playNext">
      <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3 8.688c0-.864.933-1.405 1.683-.977l7.108 4.062a1.125 1.125 0 010 1.953l-7.108 4.062A1.125 1.125 0 013 16.81V8.688zM12.75 8.688c0-.864.933-1.405 1.683-.977l7.108 4.062a1.125 1.125 0 010 1.953l-7.108 4.062a1.125 1.125 0 01-1.683-.977V8.688z"></path>
      </svg>
    </button>
  </div>

  <% album.tracks.each_with_index do |track, index| %>
    <% if track.preview && track.preview.file %>
      <div data-player-target="track" data-action="click->player#playTrack" data-track-url="<%= cdn_url(track.preview.file) %>">
        <%= index + 1 %>. <span class="hover:underline cursor-pointer"><%= track.title %></span>
      </div>
    <% end %>
  <% end %>
</div>
